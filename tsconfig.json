{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "paths": {
      "@tx/src/*": ["src/*"],
      "@tx/test/*": ["test/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
